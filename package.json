{
  "name": "nevermiss",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev -w @nevermiss/web",
    "dev:desktop": "npm run dev -w @nevermiss/desktop",
    "dev:mobile": "npm run dev -w @nevermiss/mobile",
    "build:web": "npm run build -w @nevermiss/web",
    "build:desktop": "npm run build -w @nevermiss/desktop",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit -p packages/core && tsc --noEmit -p packages/ui && tsc --noEmit -p packages/supabase && tsc --noEmit -p apps/web"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
