{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@nevermiss/core": ["../../packages/core/src"],
      "@nevermiss/core/*": ["../../packages/core/src/*"],
      "@nevermiss/supabase": ["../../packages/supabase/src"],
      "@nevermiss/supabase/*": ["../../packages/supabase/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules"]
}
