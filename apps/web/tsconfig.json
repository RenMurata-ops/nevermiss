{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@nevermiss/ui": ["../../packages/ui/src"],
      "@nevermiss/ui/*": ["../../packages/ui/src/*"],
      "@nevermiss/core": ["../../packages/core/src"],
      "@nevermiss/core/*": ["../../packages/core/src/*"],
      "@nevermiss/supabase": ["../../packages/supabase/src"],
      "@nevermiss/supabase/*": ["../../packages/supabase/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
